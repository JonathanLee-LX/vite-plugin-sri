{
  "include": [".eslintrc.cjs", "rollup.config.ts", "src/index.ts", "**/*.spec.*"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "rootDir": "./",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true
  }
}
