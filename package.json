{
  "name": "@vividlemon/vite-plugin-sri",
  "displayName": "vite-plugin-sri",
  "description": "A Vite plugin that adds subresource integrity hashes to your index.html file at build time.",
  "version": "0.0.6",
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "types": "./dist/index.d.ts",
  "private": false,
  "scripts": {
    "prepare": "husky install",
    "build": "rollup --config rollup.config.ts --configPlugin typescript",
    "test:unit": "vitest",
    "test:unit:ci": "vitest run",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore --fix src",
    "test:lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore src",
    "test:lint:ci": "pnpm run test:lint",
    "test": "pnpm run test:lint && pnpm run test:unit"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@rushstack/eslint-patch": "^1.3.2",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "c8": "^8.0.1",
    "eslint": "^8.46.0",
    "eslint-define-config": "^1.22.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "rollup": "^3.27.0",
    "rollup-plugin-dts": "^5.3.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.7",
    "vitest": "^0.33.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VividLemon/vite-plugin-sri.git"
  },
  "bugs": {
    "url": "https://github.com/VividLemon/vite-plugin-sri/issues"
  },
  "homepage": "https://github.com/VividLemon/vite-plugin-sri",
  "keywords": [
    "Vite",
    "Subresource",
    "Integrity",
    "SRI",
    "plugin"
  ],
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "packageManager": "pnpm@8.6.11"
}
